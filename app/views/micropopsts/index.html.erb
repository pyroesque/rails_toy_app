<p id="notice"><%= notice %></p>

<h1>Listing Micropopsts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @micropopsts.each do |micropopst| %>
      <tr>
        <td><%= micropopst.content %></td>
        <td><%= micropopst.user_id %></td>
        <td><%= link_to 'Show', micropopst %></td>
        <td><%= link_to 'Edit', edit_micropopst_path(micropopst) %></td>
        <td><%= link_to 'Destroy', micropopst, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

